@model IEnumerable<projTP.Models.Category>

@{
    ViewData["Title"] = "Categories";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Nom</td>
                <td>@category.Description</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = category.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = category.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
