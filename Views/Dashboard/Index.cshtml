@{
    ViewData["Title"] = "Admin Dashboard";
    var recentOrders = ViewData["RecentOrders"] as dynamic;
    var topSellingProducts = ViewData["TopSellingProducts"] as dynamic;
}

<div class="container mt-5">
    <h1>Admin Dashboard</h1>
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <p class="card-text">@ViewData["TotalProducts"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text">@ViewData["TotalOrders"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <p class="card-text">@ViewData["TotalRevenue"] $</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Categories</h5>
                    <p class="card-text">@ViewData["TotalCategories"]</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3>Recent Orders</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Date</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Customer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in recentOrders)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.OrderDate</td>
                        <td>@order.TotalAmount</td>
                        <td>@order.Status</td>
                        <td>@order.UserName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-5">
        <h3>Top Selling Products</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Total Sold</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in topSellingProducts)
                {
                    <tr>
                        <td>@product.Nom</td>
                        <td>@product.TotalSold</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
