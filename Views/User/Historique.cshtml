@model IEnumerable<projTP.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h1>Order History</h1>

<div class="container mt-4">
    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Order Date</th>
                    <th>Address</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@order.Adresse</td>
                        <td>@order.TotalAmount €</td>
                        <td>@order.Status</td>
                        <td>
                            <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-info">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders found.</p>
    }
</div>
